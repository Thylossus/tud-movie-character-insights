doctype html
html
    head
        title Movie Image Selector
        script(src='/lib/jquery/jquery.min.js')
        script(src='/lib/bootstrap/js/bootstrap.min.js')
        link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/custom.css')
    body
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Home
                .navbar-collapse.collapse#navbar
                    ul.nav.navbar-nav
                        li.dropdown
                            a.dropdown-toggle#dropdownMovies(data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Filme &nbsp;
                                span.caret
                            ul.dropdown-menu(aria-labelledby='dropdownMovies')
                                each movie in movies
                                    li
                                        a(href='/' + movie.id)= movie.name
        block content
